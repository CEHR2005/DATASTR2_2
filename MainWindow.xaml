<Window x:Class="MapVisualization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Map Visualization" Height="450" Width="800">
    <Grid>
        <Canvas Name="MapCanvas" VerticalAlignment="Top" Height="350">
            <!-- Здесь будут отображаться города и дороги -->
        </Canvas>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <ComboBox Name="StartCityComboBox" Width="120" Margin="10"/>
            <ComboBox Name="EndCityComboBox" Width="120" Margin="10"/>
            <Button Name="FindRouteButton" Content="Найти маршрут" Margin="10" Click="FindRouteButton_Click"/>
            <TextBlock Name="DistanceTextBlock" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>